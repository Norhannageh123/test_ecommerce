<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#704F38"
        android:gravity="center"
        android:paddingTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set the new password for your account."
        android:textSize="14sp"
        android:textColor="#666"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <!-- New Password Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="14sp"
        android:textColor="#000"
        android:paddingBottom="8dp" />

    <!-- New Password Input with Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/password_field_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/inputNewPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnToggleNewPassword"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/eye_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Show or hide password" />
    </LinearLayout>

    <!-- Confirm Password Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="14sp"
        android:textColor="#000"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Confirm Password Input with Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/password_field_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/inputConfirmPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Re-enter new password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnToggleConfirmPassword"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/eye_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Show or hide confirm password" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:backgroundTint="#704F38"
        android:textColor="#FFFFFF" />

</LinearLayout>
