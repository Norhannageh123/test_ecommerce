<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Confirmation Box -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#E6F4EA"
android:padding="16dp"
android:orientation="vertical"
android:gravity="center"
android:layout_marginTop="16dp">

<!-- Checkmark Icon -->
<ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/circle_check_regular"
    app:tint="#4CAF50"
    android:contentDescription="Password changed successfully" />

<!-- Success Message -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Password Changed"
    android:textSize="18sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:paddingTop="8dp" />

<!-- Additional Message -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="You can now use your new password to login to your account."
    android:textSize="14sp"
    android:textColor="#666"
    android:paddingTop="4dp" />

<!-- Login Button -->
<Button
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textStyle="bold"
    android:layout_marginTop="16dp"
    android:padding="12dp"
    android:backgroundTint="#704F38"
    android:textColor="#FFFFFF"/>
</LinearLayout>

    </LinearLayout>
